{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "neon/common",
        "neon/browser",
        "neon/node",
        "neon/typescript",
        "neon/react",
        "neon/prettier",
        "neon/jsx-a11y",
        "plugin:@next/next/recommended"
    ],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "rules": {
        "object-curly-spacing": "error",
        "n/prefer-global/process": "off",
        "no-restricted-globals": "off"
    }
}
